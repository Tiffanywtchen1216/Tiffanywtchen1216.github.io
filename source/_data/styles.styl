.archive .collection-title {
  display: none !important;
}

.share-buttons {
  display: flex;
  justify-content: center;
  gap: 10px;
}

.share-button {
  padding: 5px 15px;
  font-size: 16px;
  border: none;
  border-radius: 5px;
  background-color: var(--btn-default-bg);
  cursor: pointer;
  color: inherit;
  text-decoration: none;
}

.share-button i {
  margin-right: 5px;
}

@media (max-width: 768px) {
  .share-button {
    padding: 15px 20px;
    font-size: 18px;
  }
}